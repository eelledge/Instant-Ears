<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:stretchColumns="0,1,2"   
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" android:weightSum="1.0">
	<TableRow android:paddingBottom="10dp">
		<TextView 
			android:text="Instant Ears"
			android:layout_span="2" 
			android:textStyle="bold" 
			android:textColor="@color/blue" 
			android:textSize="24dp">
		</TextView>
		<ImageView 
			android:id="@+id/imgLogo" 
			android:src="@drawable/ielogo" 
			android:layout_height="32dp" 
			android:layout_width="32dp" 
			android:clickable="true">
		</ImageView>
	</TableRow>
	<TableRow>	
		<RelativeLayout android:id="@+id/relativeLayout1" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_span="3">
			<ListView 
					android:id="@+id/lstBusiness" 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent" 
					android:paddingTop="10dp" android:drawSelectorOnTop="true">
			</ListView>
		</RelativeLayout>
	</TableRow>	
</TableLayout>
